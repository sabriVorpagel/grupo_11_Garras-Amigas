<article class="home__main__section--article carritoImagenOferta">
    <a href="/products/detail/<%= id %> "><img src="/images/productos/<%= images[0] ? images[0].file : 'Anuncio.png' %>" width="200"; height="200"></a>
    <div class="home__main__section__article--div carritoDatosOferta">
        <h4 class="product-title "><%= name %> </h4>   
        <h6 class="price p-3 pt-0 pb-0">Precio: $<%= price %> </h6>   
        <h6 class="discount p-3 pt-0 pb-0">Promo descuento: <%= discount %>% </h6> 
        <h3 class="price-total-product p-0">Precio final:
            <br>
        <% if (discount > 0) {%>  
            $<%= toThousand(price - (price * discount / 100)) %>
                <%}else{ %> 
                $<%= toThousand(price) %>
                <% } %> 
        </h3> 
        <button class="btn btn-outline-primary button-cart" data-bs-toggle="modal" data-bs-target="#cartModal"  onclick="addCartItem('<%=id%>')">AGREGAR AL CARRITO <i class="fa-solid fa-cart-shopping"></i></button>
    </div>
</article>